
@{
    ViewBag.Title = "addpost";
}


<div class="add-post">
    <div>
        <div class="head">
            <div class="title">

                Chọn danh mục

            </div>
            <div class="add-post-step">               
                <div class="step-slider">
                    <div></div>
                </div>
            </div>
        </div>
        <div class="content">
            <div>
                <div class="add-post-loai-bds active" nametitle="Chọn danh mục">
                    <div>
                        <label class="radio-default">
                            Nhà riêng
                            <input type="radio" />
                            <span class="checkmark"></span>
                        </label>
                    </div>
                    <div>
                        <label class="radio-default">
                            Đất nền
                            <input type="radio" />
                            <span class="checkmark"></span>
                        </label>
                    </div>
                    <div>
                        <label class="radio-default">
                            Căn hộ
                            <input type="radio" />
                            <span class="checkmark"></span>
                        </label>
                    </div>
                    <div>
                        <label class="radio-default">
                            Dự án
                            <input type="radio" />
                            <span class="checkmark"></span>
                        </label>
                    </div>

                </div>
                <div class="add-post-info-1" nametitle="Thông tin cơ bản">

                    <table class="table-input-form">
                        <tr>
                            <td>
                                Tên toà nhà / khu dân cư / dự án
                            </td>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Chọn tỉnh thành
                            </td>
                            <td><select><option value="-Chọn-"></option></select></td>
                        </tr>
                        <tr>
                            <td>Quận, huyện</td>
                            <td><select><option value="-Chọn-"></option></select></td>
                        </tr>
                        <tr>
                            <td>Phường, xã, thị trấn</td>
                            <td><select><option value="-Chọn-"></option></select></td>
                        </tr>
                        <tr>
                            <td>Số nhà</td>
                            <td> <input type="text" /></td>
                        </tr>
                        <tr>
                            <td>Tên đường   </td>
                            <td> <input type="text" /></td>
                        </tr>
                    </table>
                </div>
                <div class="add-post-add-photo" nametitle="Hình ảnh và Video">
                    <div>Chọn nhiều hình đẹp để bán chạy hơn</div>
                    <div class="add-post-inmport-photo">
                        <div>
                            <div>
                                <img src="~/images/house.png" />
                            </div>
                            <div>
                                <img src="~/images/house.png" />
                            </div>
                            <div>
                                <img src="~/images/house.png" />
                            </div>
                            <div><i class="fas fa-camera"></i></div>
                        </div>
                    </div>
                </div>
                <div class="add-post-info-2" nametitle="Diện tích & Giá">

                    <table class="table-input-form">
                        <tr>
                            <td>
                                Diện tích
                            </td>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Giá
                            </td>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>

                    </table>
                </div>
                <div class="add-post-info-3" nametitle="Thông tin cơ bản">

                    <table class="table-input-form">
                        <tr>
                            <td>
                                Số phòng ngủ
                            </td>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Số phòng vệ sinh
                            </td>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Hướng cửa chính
                            </td>
                            <td>
                                <select><option></option></select>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Hướng ban công
                            </td>
                            <td>
                                <select><option></option></select>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="add-post-info-4" nametitle="Tiêu đề & Mô tả chi tiết">

                    <table class="table-input-form">
                        <tr>
                            <td>
                                Tiêu đề
                            </td>
                            <td>
                                <input type="text" />
                            </td>
                        </tr>
                        <tr>
                            <td>
                                Mô tả chi tiết
                            </td>
                            <td>
                                <input type="text" multiple="5" />
                            </td>
                        </tr>

                    </table>
                </div>
            </div>
        </div>
        <div class="button">
            <div>
                <div>
                    <div>
                        <input type="button" value="Quay lại" class="button-light" onclick="addpost_back_click()" />
                        <input type="button" value="Tiếp tục" class="button-dark" onclick="addpost_next_click()" />
                        <input type="button" value="Xem / Đăng tin" class="button-light" onclick="addpost_view_click()" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


